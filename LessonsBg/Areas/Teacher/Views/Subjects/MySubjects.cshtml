@model IEnumerable<SubjectModel>

@{
    ViewData["Title"] = "Мойте предмети";
}

<div class="text-center  push">
	<h1 class="display-3">Мойте предмети</h1>
    @foreach (var subject in Model)
    {
		<div class="card text-center bg-info mt-2">
            <div class="card-body">
                <h5 class="card-title mt-1">@subject.Name</h5>
            </div>

            <form class="input-group-sm" asp-route-sId="@subject.Id" asp-area="Teacher" asp-controller="Subjects" asp-action="Remove" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Премахни" />
            </form>
        </div>
    }
</div>


