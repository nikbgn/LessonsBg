@model RegisterViewModel;
@{
    ViewData["Title"] = "Регистрация";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="row push">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="alert alert-warning" role="alert">
                <h3>Внимание</h3>
                Ако желаете да регистрирате академия, моля попълнете "академия" в полето за фамилно име.
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstName"></label>
                <input class="form-control " placeholder="Вашето име" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastName"></label>
                <input class="form-control" placeholder="Вашето фамилно име" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email"></label>
                <input class="form-control " placeholder="Вашият имейл" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.PhoneNumber"></label>
                <input class="form-control " placeholder="Вашият телефонен номер" aria-required="true" type="tel" asp-for="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password"></label>
                <input class="form-control" placeholder="Вашата парола" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.PasswordRepeat"></label>
                <input class="form-control" placeholder="Повторете паролата" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.PasswordRepeat" />
                <span asp-validation-for="@Model.PasswordRepeat" class="text-danger"></span>
            </div>            
            
            <div class="text-center mb-3">
                <label>Вид регистрация</label>
                <select asp-for="@Model.RegistrationFlag" class="form-select" aria-label="Default select example">
                  <option value="1">Потребител</option>
                  <option value="2">Учител</option>
                  <option value="3">Треньор</option>
                  <option value="4">Академия</option>
                </select>
            </div>


            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-success">Регистрирай се</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}