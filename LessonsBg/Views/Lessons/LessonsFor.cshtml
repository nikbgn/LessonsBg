@model IEnumerable<TeacherCardModel>

@{
	ViewData["Title"] = "Откриване на учители";
}



@if (!Model.Any())
{
	<h1 class="text-center display-1 mt-5 push">Към момента нямаме учители преподаващи този предмет.</h1>
}
else
{
	<h2 class="text-center mt-2">Учители</h2>
	<div class="album py-5 push">
		<div class="container text-center">
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
				@foreach (var teacher in Model)
				{
					<div class="col">
						<div class="card  border-success">
							<div class="card-body">
								<img class="avatar-image-size rounded-circle mb-2" src="@teacher.ProfileImage" />
								<hr>
								<h5 class="card-title">@teacher.FirstName @teacher.LastName</h5>
								<hr>
								<h6>@teacher.PhoneNumber</h6>
								<a href="#" class="btn btn-primary">Изпрати съобщение.</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>

}


