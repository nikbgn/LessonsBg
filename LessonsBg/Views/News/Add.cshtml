@model NewsArticleModel;

@{
    ViewBag.Title = "Добави новина.";
}

<div class="container push">
    <h2 class="text-center mt-5">@ViewBag.Title</h2>
    <hr />

    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form method="post">
                <div class="mb-3">
                    
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Text" class="form-label"></label>
                    <textarea asp-for="@Model.Text" class="form-control" aria-required="true" ></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageURL" class="form-label"></label>
                    <input asp-for="@Model.ImageURL" class="form-control" aria-required="true" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-success" type="submit" value="Добави" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}