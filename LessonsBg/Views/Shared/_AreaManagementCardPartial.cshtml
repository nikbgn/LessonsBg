@model AreaManagementCardModel

<div class="card shadow-sm h-100">
	<img src="@Model.CardImage" class="card-img-top" alt="Card image.">
	<div class="card-body">
		<p>@Model.CardText</p>
		<div class="d-flex justify-content-center align-items-center">
			<div class="btn-group">
				<form asp-area="@Model.FormArea" asp-controller="@Model.FormController" asp-action="@Model.FormAction" method="get">
					<input type="submit" class="btn btn-lg btn-warning m-1 text-white" value="@Model.ButtonValue" />
				</form>
			</div>
		</div>
	</div>
</div>